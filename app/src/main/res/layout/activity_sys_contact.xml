<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/contact_show"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200" />

    <Button
        android:id="@+id/add_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add_phone_number" />

    <Button
        android:id="@+id/delete_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete_phone_number" />

    <Button
        android:id="@+id/get_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get_phone_number" />


</LinearLayout>